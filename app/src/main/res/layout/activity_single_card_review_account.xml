                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginLeft="5dp"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profileAboutAcc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginLeft="5dp"
                        android:text="About"
                        android:textColor="@color/grey"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/BtnDeclineAcc"
                        android:layout_width="118dp"
                        android:layout_height="71dp"
                        android:layout_marginHorizontal="75dp"
                        android:backgroundTint="@color/dark_red_1"
                        android:text="Decline"
                        android:textColor="#F5FBF6"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/BtnApproveAcc"
                        android:layout_width="114dp"
                        android:layout_height="71dp"
                        android:layout_marginHorizontal="75dp"
                        android:backgroundTint="#060E08"
                        android:text="Approve"
                        android:textColor="#F5FBF6"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/BtnAdminHomeAcc"
                        android:layout_width="144dp"
                        android:layout_height="71dp"
                        android:layout_marginHorizontal="75dp"
                        android:backgroundTint="@color/black"
                        android:text="Go to admin home"
                        android:textColor="#F5FBF6"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="400dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#ACA1A1" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>