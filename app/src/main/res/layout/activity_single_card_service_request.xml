<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--                Card started-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="5dp"
                android:text="Post details"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PostDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="5dp"
                android:text="Tutor"
                android:textColor="#6E6161"
                android:textSize="20dp"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnDeclineRequest"
                android:layout_width="185dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/dark_red_1"
                android:text="Decline request"
                android:textColor="#F5FBF6"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/BtnAcceptRequest"
                android:layout_width="185dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/teal_700"
                android:text="Accept request to receive rating"
                android:textColor="#F5FBF6"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnViewProfileOfReceiver"
                android:layout_width="185dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="#060E08"
                android:text="View profile of service receiver"
                android:textColor="#F5FBF6"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ACA1A1" />

        <!--                Card Ended-->

    </LinearLayout>

</androidx.cardview.widget.CardView>